<div class="divForm">
    <form action="/register" method="post" class="form">
            <h1>Sign Up</h1>
            <label for="mail" class="form-label">Mail</label>
            <input type="email" name="mail" class="form-input" placeholder="mail">
            <label for="username" class="form-label">Nombre</label>
            <input type="name" name="username" class="form-input" placeholder="nombre">
            <label for="password" class="form-label">Contraseña</label>
            <input type="password" name="password" class="form-input" placeholder="contraseña">
            <button type="submit" class="btn">Enviar</button>
            
        </form>
    <button class="btn" onclick="location.href = '/login'">Log in</button>
</div>
